{
  "manifest_version": 3,
  "name": "WebControl",
  "description": "Navigate Chrome with hand gesture commands from the WebControl gesture service.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "WebControl",
    "default_icon": {
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "128": "assets/icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
